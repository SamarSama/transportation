<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addpostFragment">

    <TextView
        android:id="@+id/app_slogan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:text="سجل بيانات المنشور "
        android:textAlignment="center"
        android:textColor="@color/green1"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/postdetials"
        android:layout_width="405dp"
        android:layout_height="350dp"
        android:layout_below="@+id/app_slogan"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/input_design"
        android:hint="تفاصيل المنشور"
        android:inputType="text"
        android:lines="10"
        android:padding="20dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:textColorHint="@color/green1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postdetials"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:padding="17dp"
        android:text="ارسل المنشور"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />



</RelativeLayout>